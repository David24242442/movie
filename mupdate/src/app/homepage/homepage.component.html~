    <form id="search-form" class="flex space-x-2">
      <input type="text" id="search-input" placeholder="Search movies..." class="px-3 py-2 rounded bg-gray-800 text-white border border-gray-700">
      <button type="submit" class="px-4 py-2 bg-blue-600 rounded text-white hover:bg-blue-700">Search</button>
    </form>
    <div class="user-profile flex items-center space-x-2">
      <a href="/signin" class="flex items-center space-x-2">
